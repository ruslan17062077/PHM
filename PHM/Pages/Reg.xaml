<Page x:Class="PHM.Pages.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PHM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel Orientation="Horizontal">
                <TextBlock>Наме:</TextBlock>
                <TextBox x:Name="nameTb" Width="100">
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>ЛОГИН:</TextBlock>
                <TextBox x:Name="login" Width="100">
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Пароль:</TextBlock>
                <TextBox x:Name="password" Width="100">
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="Cancel" Click="Cancel_Click" >отмена</Button>
                <Button Name="reg" Click="vhod_Click" >Зарегаться</Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
