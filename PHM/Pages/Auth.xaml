<Page x:Class="PHM.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PHM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock>ЛОГИН:</TextBlock>
                <TextBox x:Name="login" Width="100">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock>Пароль:</TextBlock>
                <TextBox x:Name="password" Width="100">
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Margin="10 0 20 0" x:Name="reg" Click="reg_Click">Регистрация</Button>
                <Button Name="vhod" Click="vhod_Click" >Войти</Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
